<h2 class="h1 mt-3 mb-4 ml-3 text-center">Edit the existing gossip here:</h2>
  <div class="container mt-5 form-group">
    <%= form_tag url_for(action: 'update'), method: "patch" do %>
    <% if @gossip.errors.any? %>
    <p class="alert alert-danger d-flex justify-content-center" role="alert"">The following error(s) ocurred:
      <% @gossip.errors.full_messages.each do |message| %>
        <%= message %></p>
      <% end %>
    <p>Re-send the form with the right informations</p>
  <% end %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <%= label_tag 'Change the title of the gossip:' %>
  <%= text_field_tag :new_title, @gossip.title, class:'form-control' %>
  <br /> <br />
  <%= label_tag 'Change the content of the gossip:' %>
  <%= text_area_tag :new_content, @gossip.content, class:'form-control' %>
    <br /> <br />
  <%= submit_tag "Edit the gossip", class:"btn btn-primary"%>
<% end %>
</div>