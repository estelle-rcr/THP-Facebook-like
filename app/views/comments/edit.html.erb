<h2 class="h1 mt-3 mb-4 ml-3 text-center">Edit the existing comment here:</h2>
  <div class="container mt-5 form-group">
    <%= form_tag url_for(action: 'update'), method: "patch" do %>
    <% if @comment.errors.any? %>
    <p class="alert alert-danger d-flex justify-content-center" role="alert"">The following error(s) ocurred:
      <% @comment.errors.full_messages.each do |message| %>
        <%= message %></p>
      <% end %>
    <p>Re-send the form with the right informations</p>
  <% end %>
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <%= label_tag 'Change the content of the comment:' %>
  <%= text_area_tag :content, @comment.content, class:'form-control' %>
    <br /> <br />
  <%= submit_tag "Edit the comment", class:"btn btn-primary"%>
<% end %>
</div>
<div class="d-flex flex-column align-items-center m-3">
<p class="font-weight-bold">Or simply delete it:</p>
<%= link_to "Delete", gossip_comment_path(@gossip.id, @comment.id), class:"btn btn-outline-danger", data:{confirm:"Do you confirm you want to permanently delete this comment?", method:"DELETE"} %>
</div>